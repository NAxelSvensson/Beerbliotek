@page
@model BeerbliotekWebApplication.Pages.Admin.EditModel
@{
}

<br />
<h2>Edit Beer</h2>


@if (Model.errorMessage.Length > 0)
{
	//if the errorMessage is not empty then we display it.
	<div class="alert alert-warning alert-dismissible fade show" role="alert">
		<strong>@Model.errorMessage</strong>
		<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
	</div>
}


<form method="POST">
	<input type="hidden" name="id" value="@Model.beerInfo.Id">
	<div class="row mb-3">
		<label class="col-sm-3 col-form-label">Name</label>
		<div class="col-sm-6">
			<input type="text" class="form-control" name="name" value="@Model.beerInfo.Name">
		</div>
	</div>
	<div class="row mb-3">
		<label class="col-sm-3 col-form-label">Alcohol</label>
		<div class="col-sm-6">
			<input type="text" class="form-control" name="Alcohol" value="@Model.beerInfo.Alcohol">
		</div>
	</div>
	<div class="row mb-3">
		<label class="col-sm-3 col-form-label">Price</label>
		<div class="col-sm-6">
			<input type="text" class="form-control" name="Price" value="@Model.beerInfo.Price">
		</div>
	</div>
	<div class="row mb-3">
		<label class="col-sm-3 col-form-label">Volume</label>
		<div class="col-sm-6">
			<input type="text" class="form-control" name="Volume" value="@Model.beerInfo.Volume">
		</div>
	</div>
	<div class="row mb-3">
		<label class="col-sm-3 col-form-label">Type</label>
		<div class="col-sm-6">
			<input type="text" class="form-control" name="Type" value="@Model.beerInfo.Type">
		</div>
	</div>
	<div class="row mb-3">
		<label class="col-sm-3 col-form-label">Country</label>
		<div class="col-sm-6">
			<input type="text" class="form-control" name="Country" value="@Model.beerInfo.Country">
		</div>
	</div>

	@if (Model.successMessage.Length > 0)
	{
		<div class="row mb-3">
			<div class="col-sm-9">
				<div class="alert alert-success alert alert-dismissible fade show" role="alert">
					<strong>@Model.successMessage</strong>
					<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
				</div>
			</div>
		</div>
	}


	<div class="row mb-3">
		<div class="offset-sm-3 col-sm-3 d-grid">
			<button type="submit" class="btn btn-primary">Submit</button>
		</div>
		<div class="col-sm-3 d-grid">
			<a class="btn btn-outline-primary" href="/" role="button">Cancel</a>
		</div>
	</div>
</form>