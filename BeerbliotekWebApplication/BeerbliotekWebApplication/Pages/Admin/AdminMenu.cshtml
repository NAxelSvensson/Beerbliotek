@page
@model BeerbliotekWebApplication.Pages.Clients.AdminMenuModel
@{
}

<br />
<h2>List of Beers</h2>
<a class="btn btn-primary btn-sm" href="/Clients/Create">New Beer</a>
<table class="table">
	<thead>
		<tr>
			<th>ID</th>
			<th>Name</th>
			<th>Alcohol</th>
			<th>Price</th>
			<th>Volume</th>
			<th>Type</th>
			<th>Country</th>
			<th>Action</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model.listBeers)
		{
			<tr>
				<td>@item.Id</td>
				<td>@item.Name</td>
				<td>@item.Alcohol</td>
				<td>@item.Price</td>
				<td>@item.Volume</td>
				<td>@item.Type</td>
				<td>@item.Country</td>
				<td>
					<a class="btn btn-primary btn-sm" href="/Clients/Edit?id=@item.Id">Edit</a>
					<a class="btn btn-danger btn-sm" href="/Clients/Delete?id=@item.Id">Delete</a>
				</td>
			</tr>
		}
	</tbody>
</table>